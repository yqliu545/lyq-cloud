<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.order.mapper.CartMapper">
    
    <resultMap type="Cart" id="CartResult">
        <result property="id"    column="id"    />
        <result property="merchandiseId"    column="merchandise_id"    />
        <result property="userId"    column="user_id"    />
        <result property="num"    column="num"    />
        <result property="time"    column="time"    />
    </resultMap>

    <sql id="selectCartVo">
        select id, merchandise_id, user_id, num, time from t_cart
    </sql>

    <select id="selectCartList" parameterType="Cart" resultMap="CartResult">
        <include refid="selectCartVo"/>
        <where>  
            <if test="merchandiseId != null "> and merchandise_id = #{merchandiseId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="num != null "> and num = #{num}</if>
            <if test="time != null "> and time = #{time}</if>
        </where>
    </select>
    
    <select id="selectCartById" parameterType="Long" resultMap="CartResult">
        <include refid="selectCartVo"/>
        where id = #{id}
    </select>

    <insert id="insertCart" parameterType="Cart" useGeneratedKeys="true" keyProperty="id">
        insert into t_cart
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="merchandiseId != null">merchandise_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="num != null">num,</if>
            <if test="time != null">time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="merchandiseId != null">#{merchandiseId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="num != null">#{num},</if>
            <if test="time != null">#{time},</if>
         </trim>
    </insert>

    <update id="updateCart" parameterType="Cart">
        update t_cart
        <trim prefix="SET" suffixOverrides=",">
            <if test="merchandiseId != null">merchandise_id = #{merchandiseId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="num != null">num = #{num},</if>
            <if test="time != null">time = #{time},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCartById" parameterType="Long">
        delete from t_cart where id = #{id}
    </delete>

    <delete id="deleteCartByIds" parameterType="String">
        delete from t_cart where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>